<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body {
      font-family: 'Arial', sans-serif;
      background-color: yellow;
      text-align: center;
    }

    .container {
      max-width: 600px;
      margin: 50px auto;
      background-color: pink;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    #wordDisplay {
      font-size: 24px;
      margin-bottom: 20px;
    }

    button {
      font-size: 16px;
      padding: 10px 20px;
      margin: 10px;
      cursor: pointer;
    }

    #result {
      font-size: 18px;
      margin-top: 20px;
    }
  </style>
  <title>Hangman Game</title>
</head>
<body>
  <div class="container">
    <h1>Hangman Game</h1>
    <div id="wordDisplay"></div>
    <p>Guess a letter:</p>
    <input type="text" id="userInput" maxlength="1" style="text-transform: uppercase;">
    <button onclick="guessLetter()">Submit Guess</button>
    <div id="result"></div>
  </div>
  <script>
    const words = ['JAVASCRIPT', 'HTML', 'CSS', 'PYTHON', 'JAVA'];
    let selectedWord = words[Math.floor(Math.random() * words.length)];
    let guessedWord = Array(selectedWord.length).fill('_');
    let incorrectGuesses = 0;

    function displayWord() {
      document.getElementById('wordDisplay').innerText = guessedWord.join(' ');
    }

    function guessLetter() {
      const userInput = document.getElementById('userInput').value.toUpperCase();

      if (!userInput.match(/^[A-Z]$/) || guessedWord.includes(userInput)) {
        document.getElementById('result').innerText = 'Please enter a valid and unused letter.';
      } else {
        if (selectedWord.includes(userInput)) {
          for (let i = 0; i < selectedWord.length; i++) {
            if (selectedWord[i] === userInput) {
              guessedWord[i] = userInput;
            }
          }

          if (!guessedWord.includes('_')) {
            document.getElementById('result').innerText = 'Congratulations! You guessed the word!';
          }
        } else {
          incorrectGuesses++;
          if (incorrectGuesses === 6) {
            document.getElementById('result').innerText = `Sorry, you ran out of guesses. The word was "${selectedWord}". Try again!`;
          }
        }

        displayWord();
      }
    }

    displayWord();
  </script>
</body>
</html>
